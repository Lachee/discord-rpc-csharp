{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [ "**.csproj" ]
        }
      ],
      "globalNamespaceId": "Global",
      "dest": "api"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "Discord RPC C#",
      "_appName": "Discord RPC C#",
      "_appLogoPath": "Resources/logo-small.png",
      "_appFaviconPath": "Resources/logo.svg",
      "_appFooter": "<a href=\"https://github.com/Lachee/discord-rpc-csharp\">Contribute</a> on GitHub",
      "_enableSearch": true
    },
    "content": [
      {
        "files": [ "api/*.yml" ]
      },
      {
        "files": [  "articles/toc.yml", "articles/**.md" ]
      },
      {
        "files": [ "toc.yml", "index.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "Resources/**"]
      }
    ],
    "sitemap": {
      "baseUrl": "https://lachee.github.io/discord-rpc-csharp/"
    },
    "template": ["default", "modern"],
    "postProcessors": [ "ExtractSearchIndex" ],
    "dest": "../_site"
  }
}